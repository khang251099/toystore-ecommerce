@model ThuongMaiDienTu.Models.KhachHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<div class="">
    <ol class="breadcrumb">
        <li>
            <i class="fas fa-home"></i> <a href="@Url.Action("Index","Home")">Trang chủ</a>
        </li>
        <li>
            <a href="~/User/Details">Tài khoản của tôi</a><i class="fas fa-info-circle"></i>
        </li>
    </ol>
    <div class="">
        <h1 class="page-header" style="text-align:center;">
            Thay đổi mật khẩu
        </h1>

    </div>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            @*<h2 style="text-align:center;padding-top: 1em;">Đổi mật khẩu</h2>*@

            @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.IDKhachHang)
                    <div class="row">

                        <div class="col-lg-3"></div>

                        <div class="col-lg-6">

                            <div class="form-group">
                                <span class="control-label col-md-2">Nhập mật khẩu </span>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.PasswordKH, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PasswordKH, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <span class="control-label col-md-2">Xác nhận lại mật khẩu</span>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div> <div class="col-lg-3"></div>
                    </div>

                    <div class="form-group" style="float:right; margin-top: 10px;">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-danger" />
                        </div>

                    </div>
                </div>
            }
            <div>
                @Html.ActionLink("Trở về", "Details", new { id = Model.IDKhachHang })
            </div>

        </div>
        <div class="col-lg-2"></div>
    </div>
