@model ThuongMaiDienTu.Models.KhachHang

@{
    ViewBag.Title = "Home | Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="">
        <ol class="breadcrumb">
            <li>
                <i class="fas fa-home"></i> <a href="@Url.Action("Index","Home")">Trang chủ</a>
            </li>
            <li>
                <i class="fas fa-info-circle"></i> Thông tin tài khoản
            </li>
        </ol>
        <h1 class="page-header" style="text-align:center;">
            Thông tin tài khoản
        </h1>

    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <table class="table table-striped table-bordered" style="table-layout:fixed">
                <tr>
                    <td>Tên người dùng</td>
                    <td>@Html.DisplayFor(model => model.FullName)</td>
                </tr>
                <tr>
                    <td>Số điện thoại</td>
                    <td>@Html.DisplayFor(model => model.Phone_Cus)</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>

                <tr>
                    <td>Thứ hạng</td>
                    <td>@Html.DisplayFor(model => model.RankKH.RankName)</td>
                </tr>
                <tr>
                    <td>Số điểm tích lũy</td>
                    <td>@Html.DisplayFor(model => model.PointKH)</td>
                </tr>
                <tr>
                    <td colspan="2">
                        <a href="@Url.Action("UpdateInfo", "User")" style="display: block; margin: auto" class="btn btn-primary">Thay đổi mật khẩu</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div>
    @Html.Action("OrderHistory", "User")
</div>