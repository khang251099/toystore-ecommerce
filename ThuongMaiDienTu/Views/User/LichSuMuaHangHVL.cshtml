
@model IEnumerable<ThuongMaiDienTu.Models.OrderDetail>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="">
        <ol class="breadcrumb">
            <li>
                <i class="fas fa-home"></i> <a href="@Url.Action("Index","Home")">Trang chủ</a>
            </li>
            <li>
                <i class="fas fa-info-circle"></i> Lịch sử mua hàng
            </li>
        </ol>
        <div class="">
            <h1 class="page-header" style="text-align:center;">
                Lịch sử mua hàng khách hàng vãng lai
            </h1>

        </div>
        <div style="padding: 15px;">
            <div class="row thumbnail" style="padding: 30px">
                <div class="col-md-6"></div>
                <div class="col-md-6">
                    @using (Html.BeginForm("LichSuMuaHangHVL", "User"))
                    {
                        <div class="col-md-9">
                            @Html.TextBox("search", "", new { placeholder = "Nhập số điện thoại để xem lịch sử mua hàng", @class = "form-control" })

                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-danger btnTimkiem_theodoidonhang">Tìm kiếm</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
<div class="container">

    <table class="table table-striped table-bordered">
        <tr class="bg-info">
            <th>
                Mã đơn hàng
            </th>
            <th>
                Ngày mua
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>Hình sản phẩm</th>


            <th>
                Tổng tiền
            </th>
            <th>
                Địa chỉ
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDOrder)
                </td>
                <td>
                    @item.Order.NgayDat
                </td>
                <td>
                    @item.Product.ProductName
                </td>
                <td>
                    <img src="~/Contents/Image/Toy/@item.Product.Images" style="height: 100px; width: auto; " id="previewImage" />
                </td>
                <td>
                    @item.Order.ThanhTien
                </td>
                <td>
                    @item.Order.DiaChi_Cus
                </td>
                <td>@Html.ActionLink("Chi tiết đơn hàng", "ChiTietDonHang", new { id = item.IDOrder }, new { @class = "btn btn-success btn-sm" })</td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tr>
                <td style="text-align: center; background-color: #3366cc; color: white; font-weight: bold;font-size: 20px; padding: 10px;" colspan="9">
                    Không tìm thấy kết quả phù hợp.
                </td>
            </tr>
        }
    </table>
</div>