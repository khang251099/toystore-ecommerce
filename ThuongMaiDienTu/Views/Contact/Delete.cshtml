@model ThuongMaiDienTu.Models.LienHe
@{
    ViewBag.Title = "ADMIN | Xóa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <h1>Chi tiết liên hệ</h1>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <table class="table table-striped table-bordered">
                    <tr>

                        <td>@Html.DisplayNameFor(model => model.IDLienHe)</td>
                        <td>@Html.DisplayFor(model => model.IDLienHe)</td>
                    </tr>
                    <tr>
                        <td width="30%">@Html.DisplayNameFor(model => model.NgayLienHe)</td>
                        <td>@Html.DisplayFor(model => model.NgayLienHe)</td>
                    </tr>
                    <tr>
                        <td>Khách hàng</td>
                        <td>@Html.DisplayFor(model => model.KhachHang.FullName) 
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.KhachHang.Email)</td>
                        <td>@Html.DisplayFor(model => model.KhachHang.Email)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.KhachHang.Phone_Cus)</td>
                        <td>@Html.DisplayFor(model => model.KhachHang.Phone_Cus)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.ChuDe)</td>
                        <td>@Html.DisplayFor(model => model.ChuDe)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.NoiDung)</td>
                        <td>@Html.DisplayFor(model => model.NoiDung)</td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: center">
                            <button class="btn btn-default" style="width: 200px; margin-top: 20px">
                                Xoá
                            </button>
                        </td>
                    </tr>

                </table>
            }

        </div>
    </div>
    <button class="btn" style="display: block; margin: auto">@Html.ActionLink("Hủy", "Index")</button>
</div>

