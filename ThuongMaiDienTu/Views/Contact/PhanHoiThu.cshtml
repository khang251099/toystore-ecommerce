
@model IEnumerable<ThuongMaiDienTu.Models.LienHe>
@{
    ViewBag.Title = "ADMIN | Danh sách thư đã phản hồi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h1>Danh sách thư đã phản hồi</h1>

    <div class="col-md-12" style="padding-left: 0;">
        <a class="btn btn-success" href="@Url.Action("Index", "Contact")" style="margin: 30px 0 30px 0">
            Tất cả
        </a>
        <a class="btn btn-danger" href="@Url.Action("ChuaTraLoiThu", "Contact")" style="margin: 30px 0 30px 0">
            Chưa phản hồi 
        </a>
        <a class="btn btn-success" href="@Url.Action("PhanHoiThu", "Contact")" style="margin: 30px 0 30px 0">
            Đã phản hồi
        </a>
        <br />

    </div>
</div>
<table class="table table-striped table-bordered">
    <tr class="bg-info">
        <th>
            Mã liên hệ
        </th>
        <th>
            Ngày liên hệ
        </th>
        <th>
            Khách hàng
        </th>
        <th>
            Chủ đề
        </th>
        <th>
            Nội dung
        </th>
        <th>
            Trạng thái phản hồi
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.IDLienHe
            </td>
            <td>
                @item.NgayLienHe
            </td>
            <td>
                @item.KhachHang.FullName
            </td>

            <td>
                @item.ChuDe
            </td>
            <td>
                @item.NoiDung
            </td>
            <td>@item.Status</td>
        </tr>
    }
    @if (Model.Count() == 0)
    {
        <tr>
            <td style="text-align: center; background-color: #3366cc; color: white; font-weight: bold;font-size: 20px; padding: 10px;" colspan="9">
                Không tìm thấy kết quả phù hợp.
            </td>
        </tr>
    }
</table>

</div>