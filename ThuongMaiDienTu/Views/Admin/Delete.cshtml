@model ThuongMaiDienTu.Models.Administrator

@{
    ViewBag.Title = "ADMIN | Xóa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h1>Xác nhận xóa nhân viên này?</h1>
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <table class="table table-striped table-bordered">
                <tr>
                    <td>@Html.DisplayNameFor(model => model.IDAdmin)</td>
                    <td>@Html.DisplayFor(model => model.IDAdmin)</td>
                </tr>
                <tr>
                    <td width="30%">@Html.DisplayNameFor(model => model.FullName)</td>
                    <td>@Html.DisplayFor(model => model.FullName)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Phone_Admin)</td>
                    <td>@Html.DisplayFor(model => model.Phone_Admin)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Email)</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Role.RoleName)</td>
                    <td>@Html.DisplayFor(model => model.Role.RoleName)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.PasswordAdmin)</td>
                    <td>@Html.DisplayFor(model => model.PasswordAdmin)</td>
                </tr>
                <tr>
                    @using (Html.BeginForm())
                    {
                        <td colspan="2" style="text-align: center;">
                            <button style="display: block; margin: auto" type="submit" class="btn btn-danger">Xóa</button>
                        </td>
                    }

                </tr>
                <tr>
                    <td colspan="2">
                        <a href="@Url.Action("Staff", "Admin")" style="display: block; margin: auto" class="btn">Trở về</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
